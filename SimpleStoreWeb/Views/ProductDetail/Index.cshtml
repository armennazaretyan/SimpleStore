@model SimpleStoreWeb.Models.ProductViewModel


@{
    ViewBag.Title = "Product Details";
}

<h2>Product Details</h2>

<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header">
            <a href="@Url.Action("Index", "ShoppingCard")" class="btn btn-sm btn-success">Shopping Card</a>
        </h3>
    </div>
    <!-- /.col-lg-12 -->
</div>
<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header">
            <a href="@Url.Action("Index", "Store")" class="btn btn-sm btn-success">Store</a>
        </h3>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header">
            Product Name: @Model.ProductName
        </h3>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header">
            Image Path: @Model.ImagePath
        </h3>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header">
            Price: @Model.Price
        </h3>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header">
            Category Name: @Model.CategoryName
        </h3>
    </div>
</div>
